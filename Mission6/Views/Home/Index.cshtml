@{
    ViewData["Title"] = "Home Page";
}
@model List<TaskResponse>

<h1>This is Homepage</h1>


<a class="btn btn-primary" asp-controller="Home" asp-action="Form">Create a Task</a>
<br /><br />

<div class="matrix">
    <div class="row" id="title">STEPHEN COVEY'S TIME MANAGEMENT MATRIX</div>
    <div class="row zero">
        <div class="col-2 first"></div>
        <div class="col-5 first"><span id="upSpan">URGENT</span></div>
        <div class="col-5 second"><span id="upSpan">NOT URGENT</span></div>
    </div>
    <div class="row upper">
        <div class="col-2 first"><span id="mySpan">IMPORTANT</span></div>
        <div class="col-5 q">
            <p style="font-weight:bold">Quadrant 1</p>
            <div class="quad">
                @foreach (var x in Model)
                {
                    if (x.Quadrant == 1)
                    {
                        <div style="display:flex; justify-content: space-between">
                            <div class="name">@x.TaskName</div>
                            <div>
                                <a asp-controller="Home" asp-action="Edit" asp-route-recordId="@x.TaskId">Edit</a>
                                <br />
                                <a asp-controller="Home" asp-action="Delete" asp-route-recordId="@x.TaskId">Delete</a>
                            </div>
                            <div class="btnBox"><a class="btn btn-primary" asp-controller="Home" asp-action="MarkComplete" asp-route-recordId="@x.TaskId">Complete</a></div>
                        </div>
                    }
                }
            </div>
        </div>
        <div class="col-5">
            <p style="font-weight:bold">Quadrant 2</p>
            <div class="quad">
                @foreach (var x in Model)
                {
                    if (x.Quadrant == 2)
                    {
                        <div style="display: flex; justify-content: space-between">
