                            </div>
                            <div class="btnBox"><a class="btn btn-primary" asp-controller="Home" asp-action="MarkComplete" asp-route-recordId="@x.TaskId">Complete</a></div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-2 first"><span id="mySpan">NOT IMPORTANT</span></div>
        <div class="col-5 q">
            <p style="font-weight: bold">Quadrant 3</p>
            <div class="quad">
                @foreach (var x in Model)
                {
                    if (x.Quadrant == 3)
                    {
                        <div style="display: flex; justify-content: space-between">
                            <div class="name">@x.TaskName</div>
                            <div>
                                <a asp-controller="Home" asp-action="Edit" asp-route-recordId="@x.TaskId">Edit</a>
                                <br />
                                <a asp-controller="Home" asp-action="Delete" asp-route-recordId="@x.TaskId">Delete</a>
                            </div>
                            <div class="btnBox"><a class="btn btn-primary" asp-controller="Home" asp-action="MarkComplete" asp-route-recordId="@x.TaskId">Complete</a></div>
                        </div>
                    }
                }
            </div>
        </div>
        <div class="col-5">
            <p style="font-weight: bold">Quadrant 4</p>
            <div class="quad">
                @foreach (var x in Model)
                {
                    if (x.Quadrant == 4)
                    {
                        <div style="display: flex; justify-content: space-between">
                            <div class="name">@x.TaskName</div>
                            <div>
                                <a asp-controller="Home" asp-action="Edit" asp-route-recordId="@x.TaskId">Edit</a>
